<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="16dp"
    android:background="@color/red"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="16dp">

    <TextView
        android:id="@+id/swittheland_white_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/transperent_view_2"
        app:layout_constraintEnd_toStartOf="@+id/switthaland_white_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintVertical_weight="0.6"
        app:layout_constraintStart_toStartOf="@+id/transperent_view_1"
        app:layout_constraintTop_toBottomOf="@+id/transperent_view_1" />

    <TextView
        android:id="@+id/switthaland_white_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/denmark_white_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toEndOf="@+id/swittheland_white_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/denmark_white_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/swittheland_white_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/switthaland_white_2"
        app:layout_constraintTop_toTopOf="@+id/swittheland_white_1" />

    <TextView
        android:id="@+id/transperent_view_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/swittheland_white_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1.4" />

    <TextView
        android:id="@+id/transperent_view_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/transperent_view_1"
        app:layout_constraintTop_toBottomOf="@+id/swittheland_white_1"
        app:layout_constraintVertical_weight="1.4" />
</androidx.constraintlayout.widget.ConstraintLayout>
